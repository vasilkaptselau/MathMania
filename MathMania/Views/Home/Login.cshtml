
@model MathMania.Models.LoginVm
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    @Styles.Render("~/Content/bootstrap.css")
    <title>Welcome to Math Mania</title>
    <style>
        #home::before {
            content: url(../../Images/home.png);
            
        }
        #reg::before {
            content: url(../../Images/reg.png);
        }
        #user::before {
            content: url(../../Images/Wink_24.png);
            position: absolute;
            left: 45%;
        }
        #Key::before {
            content: url(../../Images/Key.png);
            position: absolute;
            left:45%;
        }
        #Door::before {
            content: url(../../Images/dooor.png);
            position: absolute;
            left: 20%;
            top:-10px;
        }
        .form-horizontal {
            text-align:center;
            border:solid 2px aquamarine;
            border-radius: 10px;
            width:30%;
            margin: 10% 35% auto auto;
            opacity:.9;
            background-color: aquamarine;
        }
    </style>
</head>
<body  style="background: url(../../Images/kids2.png) no-repeat fixed center; background-size:150% auto; background-color:aqua;">
    <div class="btn btn-default col-md-offset-10" id="home" style="margin-top: 10px;">
        @Html.ActionLink("Home", "Index")
    </div>
    <div class="btn btn-default col-md-offset-0" id="reg" style="margin-top: 10px; margin-left:10px; position:absolute">
        @Html.ActionLink("Register", "Register")
    </div>

  
    <div>
        <div class="form-horizontal">
            <h2>Please Login</h2>
            <p style="color: red;">
                @ViewBag.Error
            </p>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" id="user" style="margin-bottom:20px; text-align:center;">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-sm-offset-1" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-sm-offset-1" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" id="Key">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-offset-1" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-sm-offset-1" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" id="Door" style="margin-top:10px; margin-right:5px;">
                    <input type="submit" class="btn btn-success"  value="Open Game" />
                </div>
            </div>
           
        </div>
    </div>
    
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



